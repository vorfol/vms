{
    "name": "vms",
    "displayName": "VMS",
    "description": "",
    "version": "0.0.2",
    "publisher": "vorfol",
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:VMS.buildProject",
        "onCommand:VMS.editProject"
    ],
    "main": "./out/extension",
    "contributes": {
        "menus": {
            "commandPalette": [
                {
                    "command": "VMS.buildProject",
                    "when": "config.open-vms.build-enabled"
                }
            ]
        },
        "commands": [
            {
                "command": "VMS.buildProject",
                "title": "Build on VMS",
                "category": "OpenVMS"
            },
            {
                "command": "VMS.editProject",
                "title": "Edit OpenVMS project settings",
                "category": "OpenVMS"
            }
        ],
        "configuration": {
            "title": "OpenVMS settings",
            "properties": {
                "open-vms.build-enabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable build command"
                },
                "open-vms.connection.host": {
                    "type": "string",
                    "default": "host",
                    "description": "OpenVMS host to build, run and debug current workspace"
                },
                "open-vms.connection.port": {
                    "type": "number",
                    "default": 22,
                    "description": "OpenVMS ssh port"
                },
                "open-vms.connection.username": {
                    "type": "string",
                    "default": "",
                    "description": "Username"
                },
                "open-vms.connection.password": {
                    "type": "string",
                    "default": "",
                    "description": "Password"
                },
                "open-vms.filter.include": {
                    "type": "string",
                    "default": "**/*.*", 
                    "description": "Include files masks"
                },
                "open-vms.filter.exclude": {
                    "type": "string",
                    "default": "**/{.vscode,node-modules}/*.*", 
                    "description": "Exclude files masks"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/node": "^8.x.x",
        "fs": "0.0.1-security",
        "ssh2": "^0.6.1",
        "typescript": "^2.9.2",
        "util": "^0.11.0",
        "vscode": "^1.1.21"
    },
    "dependencies": {
        "@types/ssh2": "^0.5.35",
        "ssh2": "^0.6.1"
    },
    "enableProposedAPI": true
}