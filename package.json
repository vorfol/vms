{
    "name": "vms",
    "displayName": "VMS",
    "description": "",
    "version": "0.0.1",
    "publisher": "vorfol",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:VMS.buildProject",
        "onCommand:VMS.enumAllFiles",
        "onCommand:VMS.debugProject"
    ],
    "main": "./out/extension",
    "contributes": {
        "menus": {
            "commandPalette": [
                {
                    "command": "VMS.enumAllFiles",
                    "when": "config.open-vms.enable-test"
                }
            ]
        },
        "commands": [
            {
                "command": "VMS.buildProject",
                "title": "Build on VMS",
                "category": "OpenVMS"
            },
            {
                "command": "VMS.debugProject",
                "title": "Debug on VMS",
                "category": "OpenVMS"
            },
            {
                "command": "VMS.enumAllFiles",
                "title": "Enumerate all files in all workspaces",
                "category": "OpenVMS"
            }
        ],
        "configuration" : {
            "title": "OpenVMS settings",
            "properties": {
                "open-vms.enable-test" : {
                    "type" : "boolean",
                    "default": false,
                    "description": "Enable test findFiles()"
                },
                "open-vms.host" : {
                    "type" : "string",
                    "default" : "localhost",
                    "description": "OpenVMS host to build, run and debug current workspace"
                },
                "open-vms.port" : {
                    "type" : "number",
                    "default" : 22,
                    "description": "OpenVMS ssh port"
                },
                "open-vms.username" : {
                    "type" : "string",
                    "default" : "foo",
                    "description": "Username"
                },
                "open-vms.password" : {
                    "type" : "string",
                    "default" : "bar",
                    "description": "Password"
                },
                "open-vms.filter" : {
                    "type" : "string",
                    "default" : "**/*.{c,cpp,h}",
                    "description": "Files to send to OpenVMS"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "ssh2": "^0.6.1",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.18"
    },
    "dependencies": {
        "@types/ssh2": "^0.5.35"
    }
}
